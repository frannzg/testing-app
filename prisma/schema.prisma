generator client {
  provider = "prisma-client-js"
  //output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Creeanis los modelos necessarios en el mismo fichero schema.prisma
model User{
  id            String    @id @default(cuid())
  dni           String    @unique
  name          String
  surnames      String
  email         String    @unique
  password      String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  emailVerified DateTime?
}
